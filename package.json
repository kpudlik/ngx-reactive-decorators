{
  "name": "ngx-reactive-decorators",
  "version": "0.2.0",
  "description": "Set of decorators for Angular to make it more reactive",
  "main": "src/index.ts",
  "scripts": {
    "test": "npm outdated && node_modules/.bin/jest --ci",
    "compile-lib": "rm -rf lib/* && node_modules/.bin/tsc --project tsconfig.publish.json",
    "prepare": "npm run compile-lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kpudlik/ngx-reactive-decorators.git"
  },
  "keywords": [
    "angular",
    "ngx",
    "rxjs",
    "decorators",
    "typescript",
    "ngrx",
    "input"
  ],
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "test/tsconfig.spec.json"
      }
    },
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup.ts",
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "author": "Krystian Pudlik",
  "peerDependencies": {
    "@angular/core": "5.0.2",
    "rxjs": "5.5.2",
    "zone.js": "0.8.18"
  },
  "devDependencies": {
    "@angular/common": "5.0.2",
    "@angular/compiler": "5.0.2",
    "@angular/core": "5.0.2",
    "@angular/platform-browser": "5.0.2",
    "@angular/platform-browser-dynamic": "5.0.2",
    "@types/jest": "21.1.6",
    "jest": "21.2.1",
    "jest-preset-angular": "4.0.1",
    "rxjs": "5.5.2",
    "ts-jest": "21.2.2",
    "typescript": "2.6.1",
    "zone.js": "0.8.18"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kpudlik/ngx-reactive-decorators/issues"
  },
  "homepage": "https://github.com/kpudlik/ngx-reactive-decorators#readme"
}
