{
  "name": "ngx-reactive-decorators",
  "version": "0.1.0",
  "description": "Set of decorators for Angular to make it more reactive",
  "main": "index.ts",
  "scripts": {
    "test": "node_modules/.bin/jest --ci"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kpudlik/ngx-reactive-decorators.git"
  },
  "keywords": [
    "angular",
    "ngx",
    "rxjs",
    "decorators",
    "typescript",
    "ngrx",
    "input"
  ],
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup.ts",
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "author": "Krystian Pudlik",
  "peerDependencies": {
    "@angular/core": "^4.4.5",
    "rxjs": "^5.4.3",
    "zone.js": "0.8.18"
  },
  "devDependencies": {
    "@angular/common": "^4.4.5",
    "@angular/compiler": "^4.4.5",
    "@angular/core": "^4.4.5",
    "@angular/platform-browser": "^4.4.5",
    "@angular/platform-browser-dynamic": "^4.4.5",
    "@types/jest": "^21.1.4",
    "jest": "^21.2.1",
    "jest-preset-angular": "^4.0.1",
    "rxjs": "^5.4.3",
    "ts-jest": "^21.1.3",
    "typescript": "^2.5.3",
    "zone.js": "0.8.18"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kpudlik/ngx-reactive-decorators/issues"
  },
